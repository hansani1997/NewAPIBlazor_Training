<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlueLotus.Mobile.MAUI.BLControls.Product.ProductAddRemove">

    <Border StrokeThickness="1" Stroke="{StaticResource Gray70}" Padding="2">
        <Grid ColumnDefinitions="*,*,*">
            <Button  Text="+" Grid.Column="0"  FontSize="15" Padding="0" FontAttributes="Bold"/>

            <Label Text="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" Grid.Column="1" FontSize="16"/>
            <Button Grid.Column="2" Text="-"  FontSize="15" Padding="0" FontAttributes="Bold"/>
        </Grid>
    </Border>
</ContentView>
